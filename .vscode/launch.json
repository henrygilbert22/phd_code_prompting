    "version": "0.2.0",
    "configurations": [
        {
            "name": "Athena Python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/.bin"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}:${workspaceFolder}/.bin",
                    "remoteRoot": "/home/athena"
                }
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            
        }
    ]
}